<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #0808A8;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Presentation.FineHistoryReportController">

    <top>
        <Label text="User Fine History" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="tblHistory">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="242.0" text="Date" />
                <TableColumn fx:id="colType" prefWidth="141.0" text="Type" />
                <TableColumn fx:id="colAmount" prefWidth="216.0" text="Amount" />
            </columns>
        </TableView>
    </center>

</BorderPane>
