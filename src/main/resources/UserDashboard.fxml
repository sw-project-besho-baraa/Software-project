<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #020617, #0f172a);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Presentation.UserDashboardController">

    <left>
        <VBox prefWidth="190.0" spacing="10.0" style="-fx-background-color: #020617;">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>
            <children>
                <Label text="System Library" textFill="#e5e7eb">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="User Panel" textFill="#9ca3af">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Separator />

                <Button fx:id="btnHome" maxWidth="Infinity" onAction="#onShowHome" style="-fx-background-radius: 999; -fx-background-color: #6366f1; -fx-text-fill: #e5e7eb; -fx-font-weight: bold;" text="Home" />
                <Button fx:id="btnSearch" maxWidth="Infinity" onAction="#onShowSearch" style="-fx-background-radius: 999; -fx-background-color: #111827; -fx-text-fill: #e5e7eb;" text="Search" />
                <Button fx:id="btnBorrowed" maxWidth="Infinity" onAction="#onShowBorrowed" style="-fx-background-radius: 999; -fx-background-color: #111827; -fx-text-fill: #e5e7eb;" text="My Borrowed" />
                <Button fx:id="btnFines" maxWidth="Infinity" onAction="#onShowFines" style="-fx-background-radius: 999; -fx-background-color: #111827; -fx-text-fill: #e5e7eb;" text="Fines And Summary" />

                <Pane VBox.vgrow="ALWAYS" />
                <Separator />
                <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#onLogout" style="-fx-background-radius: 999; -fx-background-color: rgba(248,113,113,0.18); -fx-text-fill: #fecaca;" text="Logout" />
            </children>
        </VBox>
    </left>


    <center>
        <StackPane fx:id="contentStack" style="-fx-padding: 18;">
            <children>


                <VBox fx:id="paneHome" spacing="10.0" style="-fx-background-color: #0b1120; -fx-background-radius: 18; -fx-padding: 16;">
                    <children>
                        <Label text="Welcome" textFill="#e5e7eb">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <Separator />
                        <Label fx:id="lblUserEmail" text="user@example.com" textFill="#9ca3af" />
                        <Label fx:id="lblBorrowStatus" text="Borrowed: 0 / 3 items" textFill="#e5e7eb" />
                        <Label fx:id="lblHomeFine" text="Total fines: 0 NIS" textFill="#fca5a5" />
                    </children>
                </VBox>


                <VBox fx:id="paneSearch" spacing="10.0" style="-fx-background-color: #0b1120; -fx-background-radius: 18; -fx-padding: 16;">
                    <children>
                        <Label text="Search Books And CDs" textFill="#e5e7eb">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>

                        <HBox spacing="8.0">
                            <children>
                                <ComboBox fx:id="cmbSearchType" prefWidth="150.0" />
                                <TextField fx:id="txtSearchQuery" promptText="Search by title, author, ISBN..." style="-fx-background-radius: 999; -fx-background-color: #020617; -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;" HBox.hgrow="ALWAYS" />
                                <Button onAction="#onSearchMedia" style="-fx-background-radius: 999; -fx-background-color: #6366f1; -fx-text-fill: #e5e7eb;" text="Search" />
                                <Button onAction="#onClearSearch" style="-fx-background-radius: 999; -fx-background-color: #1f2937; -fx-text-fill: #e5e7eb;" text="Clear" />
                            </children>
                        </HBox>

                        <TableView fx:id="tblSearchResults" style="-fx-background-color: #020617; -fx-table-cell-border-color: #111827; -fx-control-inner-background: #020617;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colResultType" prefWidth="70.0" text="Type" />
                                <TableColumn fx:id="colResultTitle" prefWidth="200.0" text="Title" />
                                <TableColumn fx:id="colResultAuthor" prefWidth="150.0" text="Author" />
                                <TableColumn fx:id="colResultIsbn" prefWidth="120.0" text="ISBN" />
                                <TableColumn fx:id="colResultAvailability" prefWidth="90.0" text="Status" />
                            </columns>
                        </TableView>

                        <HBox spacing="8.0">
                            <children>
                                <Button onAction="#onBorrowBook" style="-fx-background-radius: 999; -fx-background-color: #22c55e; -fx-text-fill: #020617; -fx-font-weight: bold;" text="Borrow Book" />
                                <Button onAction="#onBorrowCD" style="-fx-background-radius: 999; -fx-background-color: rgba(34,197,94,0.2); -fx-text-fill: #bbf7d0;" text="Borrow CD" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox fx:id="paneBorrowed" spacing="10.0" style="-fx-background-color: #0b1120; -fx-background-radius: 18; -fx-padding: 16;">
                    <children>
                        <Label text="My Borrowed Items" textFill="#e5e7eb">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblBorrowedCount" text="You have 0 items borrowed." textFill="#9ca3af" />

                        <TableView fx:id="tblBorrowed" style="-fx-background-color: #020617; -fx-table-cell-border-color: #111827; -fx-control-inner-background: #020617;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colBorrowedType" prefWidth="70.0" text="Type" />
                                <TableColumn fx:id="colBorrowedTitle" prefWidth="220.0" text="Title" />
                                <TableColumn fx:id="colBorrowedDueDate" prefWidth="120.0" text="Due Date" />
                                <TableColumn fx:id="colBorrowedStatus" prefWidth="90.0" text="Status" />
                            </columns>
                        </TableView>

                        <Button onAction="#onReturnItem" style="-fx-background-radius: 999; -fx-background-color: #1f2937; -fx-text-fill: #e5e7eb;" text="Return Selected" />
                    </children>
                </VBox>

                <VBox fx:id="paneFines" spacing="10.0" style="-fx-background-color: #0b1120; -fx-background-radius: 18; -fx-padding: 16;">
                    <children>
                        <Label text="Fines  Summary" textFill="#e5e7eb">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="lblFineTotal" text="Total fines: 0 NIS" textFill="#fca5a5" />
                        <Label fx:id="lblOverdueBooks" text="Overdue books: 0" textFill="#fecaca" />
                        <Label fx:id="lblOverdueCds" text="Overdue CDs: 0" textFill="#fecaca" />

                        <HBox spacing="8.0">
                            <children>
                                <TextField fx:id="txtFinePayment" prefWidth="150.0" promptText="Payment amount" style="-fx-background-radius: 999; -fx-background-color: #020617; -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;" />
                                <Button onAction="#onPayFine" style="-fx-background-radius: 999; -fx-background-color: #22c55e; -fx-text-fill: #020617;" text="Pay Fine" />
                            </children>
                        </HBox>

                        <TextArea fx:id="txtFineHistory" prefRowCount="6" promptText="Fine payments history (demo)..." style="-fx-control-inner-background: #020617; -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;" />
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
